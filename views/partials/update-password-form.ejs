<div id="update-password" class="box">
    <div style="overflow:auto;">

        <p>UPDATE PASSWORD for user <%= username%>.</p>

        <form action="/update-password" method="post" id="updatePasswordForm">
            <input name="oldPassword" id="oldPasswordUpdatePassword" type="text", placeholder="old password">
            <input name="newPassword" id="newPasswordUpdatePassword" type="text", placeholder="new password">
        </form>
        
        <!-- Include a submit form field -->
        <button class="myform" type="submit" form="updatePasswordForm">update password</button>
    </div>
</div>